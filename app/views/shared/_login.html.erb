<% if logged_in? %>
    <li class="dropdown">
      <a href = "#" class = "dropdown-toggle" data-toggle = "dropdown"> <%= @current_admin.name %> <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <!-- when logged in, go to settings page to delete account, change password, manage players and groups -->
          <li><a class="dropdown-item"><%=link_to "Settings", settings_path %></a></li>
          <li><a class="dropdown-item"><%=link_to "Log Out", logout_path, method: "delete" %></a></li>
        </ul>
    </li>
<% else %>
    <li class="dropdown">
      <a href = "#" class = "dropdown-toggle" data-toggle = "dropdown"> Log In <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li>
            <%= form_tag login_path do %>
              <%= label_tag "Name" %>
              <br>
              <%= text_field_tag :name %>
              <br>
              <%= label_tag "Password" %>
              <br>
              <%= password_field_tag :password %>
              <br>
              <%= submit_tag "Login" %>
            <% end %>
          </li>
          <li><a class="dropdown-item"><%=link_to "Register", register_path%></a></li>
        </ul>
    </li>

<% end %>